div.page-header.text-center
  h3 Create a new user
  p All fields are required to create an account.

div.text-center
    form(ng-submit="userCtrl.submit()").centred-form
      div.form-group
        input(type="text" required placeholder="Username" ng-model="userCtrl.user.username").form-control
      div.form-group
        input(type="password" required placeholder="Password" ng-model="userCtrl.user.password").form-control
      div.form-group
        input(type="text" required placeholder="First name" ng-model="userCtrl.user.firstname").form-control
      div.form-group
        input(type="text" required placeholder="Last name" ng-model="userCtrl.user.lastname").form-control
      div.form-group
        input(type="email" required placeholder="Email" ng-model="userCtrl.user.email").form-control
      button(type="submit").btn.btn-default.submit-button.
        Create an Account

  div(ng-model="userCtrl.success")
    {{userCtrl.success}}
